.container {
  padding: 20rpx;
}

.filter-bar {
  display: flex;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.filter-item {
  flex: 1;
  background: #fff;
  padding: 24rpx;
  border-radius: 12rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
  color: #333;
}

.filter-item .arrow {
  font-size: 24rpx;
  color: #999;
}

.records-list {
  margin-bottom: 40rpx;
}

.record-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
  border-left: 8rpx solid #e0e0e0;
}

.record-card.earn {
  border-left-color: #4caf50;
}

.record-card.spend {
  border-left-color: #f44336;
}

.record-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.type-badge {
  padding: 8rpx 20rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
  font-weight: bold;
}

.type-badge.earn {
  background: #e8f5e9;
  color: #4caf50;
}

.type-badge.spend {
  background: #ffebee;
  color: #f44336;
}

.time {
  font-size: 24rpx;
  color: #999;
}

.record-body {
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.info-row {
  display: flex;
  margin-bottom: 12rpx;
}

.info-row .label {
  font-size: 28rpx;
  color: #666;
  width: 120rpx;
}

.info-row .value {
  font-size: 28rpx;
  color: #333;
  flex: 1;
}

.record-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.points {
  font-size: 40rpx;
  font-weight: bold;
}

.points.earn {
  color: #4caf50;
}

.points.spend {
  color: #f44336;
}

.operator {
  font-size: 24rpx;
  color: #999;
}

.load-more {
  text-align: center;
  padding: 40rpx;
  color: #667eea;
  font-size: 28rpx;
}

.empty {
  text-align: center;
  padding: 100rpx 40rpx;
  color: #999;
  font-size: 28rpx;
}
